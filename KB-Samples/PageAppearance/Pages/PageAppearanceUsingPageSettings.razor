@page "/PageAppearance"

@using Syncfusion.Blazor.Diagram
<div style="height:700px;width:800px">
    <SfDiagramComponent Height="100%" Width="100%" Nodes="nodes">
         <PageSettings Height="400"
                  Width="300">
        @*Set the page background color*@
        <BackgroundStyle Background="LightGreen" />
        </PageSettings>
    </SfDiagramComponent>
</div>
@code
{
    DiagramObjectCollection<Node> nodes = new DiagramObjectCollection<Node>();
    protected override void OnInitialized()
    {
        Node node = new Node()
            {
                ID = "node",
                Width = 100,
                Height = 100,
                OffsetX = 100,
                OffsetY = 100,
                Style = new ShapeStyle()
                {
                    Fill = "#6495ED",
                    StrokeColor = "white"
                }
            };
        nodes.Add(node);
    }
}